<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.blink.Controllers.SignUpController"
            prefWidth="420" prefHeight="580">

    <!-- Center Box -->
    <center>
        <VBox alignment="CENTER" spacing="18">
            <children>

                <Label text="Create Account" style="-fx-font-size: 26px; -fx-font-weight: bold;" />

                <VBox spacing="10">
                    <children>
                        <TextField fx:id="nameField" promptText="Full Name"
                                   style="-fx-background-radius: 10; -fx-border-radius: 10;" />

                        <TextField fx:id="emailField" promptText="Email"
                                   style="-fx-background-radius: 10; -fx-border-radius: 10;" />

                        <TextField fx:id="phoneField" promptText="Phone"
                                   style="-fx-background-radius: 10; -fx-border-radius: 10;" />

                        <PasswordField fx:id="passwordField" promptText="Password"
                                       style="-fx-background-radius: 10; -fx-border-radius: 10;" />

                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
                                       style="-fx-background-radius: 10; -fx-border-radius: 10;" />
                    </children>
                </VBox>

                <Button text="Create Account"
                        onAction="#handleSignUp"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;
                               -fx-font-size: 15px; -fx-background-radius: 12;
                               -fx-pref-width: 220;" />

                <Hyperlink text="Already have an account? Log in"
                           onAction="#goToLogin" />

            </children>
        </VBox>
    </center>

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
</BorderPane>
