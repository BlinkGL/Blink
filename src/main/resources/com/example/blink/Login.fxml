<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="520" prefWidth="420" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.blink.Controllers.LoginController">

    <!-- Center Box -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <children>

                <Label nodeOrientation="LEFT_TO_RIGHT" style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Delivery App" />

                <VBox spacing="10">
                    <children>
                        <TextField fx:id="emailField" promptText="Email" style="-fx-background-radius: 10; -fx-border-radius: 10;" />
                        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 10; -fx-border-radius: 10;" />
                    </children>
                </VBox>

                <Button onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white;                                -fx-font-size: 15px; -fx-background-radius: 12;                                -fx-pref-width: 200;" text="Log In" />

                <Label style="-fx-font-size: 13px;" text="Don't have an account ?" />

                <Hyperlink onAction="#goToSignUp" text="Create Account">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Hyperlink>

            </children>
        </VBox>
    </center>

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>
</BorderPane>
